<div class="navbar-5crewed">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-5crewed-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-5crewed-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
    <!--   <%= link_to "Host", "#", class: "navbar-5crewed-item navbar-5crewed-link" %>
      <%= link_to "Trips", "#", class: "navbar-5crewed-item navbar-5crewed-link" %>
      <%= link_to "Messages", "#", class: "navbar-5crewed-item navbar-5crewed-link" %>
 -->
      <!-- Avatar with dropdown menu -->
      <div class="navbar-5crewed-item">
        <div class="dropdown">
          <% avatar_url = current_user.facebook_picture_url || "http://placehold.it/30x30" %>
      <%= image_tag avatar_url, class: "avatar dropdown-toggle", id: "navbar-5crewed-menu", "data-toggle" => "dropdown" %>

          <ul class="dropdown-menu dropdown-menu-right navbar-5crewed-dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-home"></i>  <%= t(".profile", default: "Home") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <h3>
      <%= link_to t(".sign_in", default: "Sign Up"), new_user_registration_path, class: "navbar-5crewed-item navbar-5crewed-link" %>
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-5crewed-item navbar-5crewed-link" %>
    <% end %>
      </h3>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-5crewed-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown" id="bars"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-5crewed-dropdown-menu">
        <li><a href="#">Sign up</a></li>
        <li><a href="#">Login</a></li>
        <li><a href="<%= t(".sign_out", default: "Log out") %>">Log out</a></li>
      </ul>
    </div>
  </div>
</div>

