<div class="show-container">
  <div class="bubble" id="b1">
    <div class="bubble-content">
    <div class="question-title">
      <%= @issue.name %>
    </div>
    <div class="question-sub-title">
      <%= @question.content %>
    </div>
    <div class="btn-tb question-btn">
      <div class="btn-text-grp">
      <%= link_to user_issue_question_path(current_user.id, params[:issue_id], @question.id, query: "true"), class: "positive" do %>
      <i class="fa fa-check" id="check"></i>
      <% end %>
      <p>Yes</p>
      </div>
      <div class="btn-text-grp">
      <%= link_to user_issue_question_path(current_user.id, params[:issue_id], @question.id, query: "false"), class: "negative" do %>
      <i class="fa fa-times" id="times"></i>
      <% end %>
      <p>No</p>
      </div>
      <div class="btn-text-grp">
      <%= link_to "#", data: {toggle: "modal", target: "#successModal"}, class: "form" do %>
      <i class="fa fa-star" aria-hidden="true"></i>
      <% end %>
      <p>Works!</p>
      </div>
    </div>
  </div>
  </div>
  <div class="img-box">
    <%= image_tag @issue.photo.fullpath, class: "question-img" %>
  </div>
  <div class="modeloC"> <%= image_tag "modeloC.svg" %> </div>
  <div class="bubble" id="b2">
      at any moment your appliance works, just press the success button! <i class="fa fa-star"></i>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="successModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="successModalLabel">Success!!!</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'shared/success' %>
      </div>
      <div class="modal-footer">
        <a href="https://www.facebook.com/sharer/sharer.php?s=100&p[url]=http://www.5crewed.top&p[images][0]=&p[title]=5crewed.com[summary]=Don't get confused, get 5crewed!" target="_blank" onclick="window.open(this.href,'targetWindow','toolbar=no,location=0,status=no,menubar=no,scrollbars=yes,resizable=yes,width=600,height=250'); return false"><button style="width:50%;" type="button" class="btn btn-primary" id="fcb-btn"> Share on <i class="fa fa-facebook fa-2"></i></button></a>
      </div>
    </div>
  </div>
</div>
